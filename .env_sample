# Options: 'live' (Real Twitch) or 'custom' (self hosted socket io)
# Uncomment the mode you want to use
APP_MODE=custom
#APP_MODE=live


# --- Custom Server Host (for 'custom' mode) ---
# Change this between 'localhost' (local development) and your server IP (production)

#CUSTOM_HOST=localhost
#CUSTOM_HOST=your_server_ip_here


# --- Twitch API Credentials ---
# Get these from https://dev.twitch.tv/console/apps
CLIENT_ID=your_twitch_client_id_here
TWITCH_SECRET=your_twitch_client_secret_here

# --- Bot Configuration---
BOT_USERNAME="your_bot_username"
TARGET_CHANNEL="channel_to_monitor"

# Keyword that triggers the bot
BOT_KEYWORD="Bot"


# --- AI Configuration ---
# Uncomment and add your Claude API key if using Claude
#CLAUDE_API_KEY=your_claude_api_key_here

# System prompt for the AI
SYSTEM_PROMPT="You are a helpful chatbot assistant."

# Ollama model to use
OLLAMA_MODEL="gemma3:12b"

# Ollama API endpoint
OLLAMA_URL="http://localhost:11434/api/generate"



# These will be automatically generated after authentication
ACCESS_TOKEN=
REFRESH_TOKEN=
